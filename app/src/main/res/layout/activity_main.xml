<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sample.davidelmn.samplespringanimation.MainActivity">
    <Button
        android:id="@+id/animateButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANIMATE"/>
    <android.support.v7.widget.CardView
        android:id="@+id/animatedCardviewId"
        android:layout_below="@id/animateButtonId"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bass_dribbble"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>
